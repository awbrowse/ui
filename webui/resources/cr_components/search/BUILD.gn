import("//ui/webui/resources/tools/build_webui.gni")

assert(!is_android && !is_ios)

build_webui("build") {
  grd_prefix = "cr_components_search"
  ts_files = [
    "animated_glow.ts",
    "animated_glow.html.ts",
    "constants.ts",
    "drag_drop_handler.ts",
    "drag_drop_host.ts",
  ]
  css_files = [ "animated_glow.css" ]

  ts_out_dir = "$root_gen_dir/ui/webui/resources/tsc/cr_components/search"
  ts_composite = true
  ts_deps = [ "//third_party/lit/v3_0:build_ts" ]
  webui_context_type = "relative"
  generate_grdp = true
  grd_resource_path_prefix = rebase_path(".", "//ui/webui/resources")
}
